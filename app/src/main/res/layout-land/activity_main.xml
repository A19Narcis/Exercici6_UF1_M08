<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textMainLand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mainTitle"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="50dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50sp">

            <Button
                android:id="@+id/btnJugarLand"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:text="@string/txtBtnJugar"
                android:layout_marginLeft="100sp"
                android:layout_marginRight="30dp"
                android:textSize="20sp"
                android:gravity="center"/>

            <Button
                android:id="@+id/btnConfigLand"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:text="@string/txtBtnConfig"
                android:layout_marginRight="100sp"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20sp">

            <Button
                android:id="@+id/btnSobreLand"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:text="@string/txtBtnSobre"
                android:layout_marginLeft="100sp"
                android:layout_marginRight="30dp"
                android:textSize="20sp"
                android:gravity="center"/>

            <Button
                android:id="@+id/btnExitLand"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:text="@string/txtBtnSortida"
                android:layout_marginRight="100sp"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"
                android:gravity="center"/>
        </TableRow>

    </TableLayout>

</LinearLayout>